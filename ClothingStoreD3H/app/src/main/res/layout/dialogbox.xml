<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/addBill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="@dimen/margin_right">

            <TextView
                android:id="@+id/demotext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_edge"
                android:padding="12dp"
                android:text="Lập hóa đơn"

                />

            <ImageView
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/demotext1"
                android:gravity="bottom"
                android:src="@drawable/ic_chuyenca" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/addProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="@dimen/margin_right">

            <TextView
                android:id="@+id/demotext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_edge"
                android:padding="12dp"
                android:text="Nhập hàng" />

            <ImageView
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/demotext2"
                android:gravity="bottom"
                android:src="@drawable/ic_nhaphang" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="@dimen/margin_right">

            <TextView
                android:id="@+id/demotext3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_edge"
                android:padding="12dp"
                android:text="Tra cứu" />

            <ImageView
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/demotext3"
                android:gravity="bottom"
                android:src="@drawable/ic_tracuu" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="@dimen/margin_right">

            <TextView
                android:id="@+id/demotext4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_edge"
                android:padding="12dp"
                android:text="Bàn giao ca" />

            <ImageView
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/demotext4"
                android:gravity="bottom"
                android:src="@drawable/btn_me_income" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="@dimen/margin_right">

            <TextView
                android:id="@+id/demotext5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_edge"
                android:padding="12dp"
                android:text="Tổng kết" />

            <ImageView
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/demotext5"
                android:gravity="bottom"
                android:src="@drawable/btn_me_sales" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cross"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="@dimen/image_filter"
                android:layout_height="@dimen/image_filter"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/cross_margin"
                android:gravity="bottom"
                android:src="@drawable/ic_banhang" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>