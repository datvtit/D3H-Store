<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/border_label"
        android:elevation="10dp"
        android:padding="5dp"
        android:weightSum="6">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="1dp"
            android:src="@drawable/ic_myproducts" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="4.25"
            android:orientation="vertical">

            <dev.datvt.clothingstored3h.utils.CustomFontTextView
                android:id="@+id/nameProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Áo khoác đôi Hàn Quốc"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:textStyle="bold" />

            <dev.datvt.clothingstored3h.utils.CustomFontTextView
                android:id="@+id/donGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Đơn giá: 100"
                android:textColor="@color/colorGray2"
                android:textSize="15sp" />

            <dev.datvt.clothingstored3h.utils.CustomFontTextView
                android:id="@+id/numberProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Số lượng: 100"
                android:textColor="@color/colorGray2"
                android:textSize="15sp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cbxSale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.75" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/frameCustom"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="5dp">

            <dev.datvt.clothingstored3h.utils.CustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Đơn giá bán: "
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDonGiaBan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/border_label_title"
                android:gravity="center"
                android:inputType="none"
                android:padding="10dp"
                android:text="0"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="3">

            <dev.datvt.clothingstored3h.utils.CustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Số lượng bán: "
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etSoLuongBan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/border_label_title"
                android:gravity="center"
                android:inputType="none"
                android:padding="10dp"
                android:text="1"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>