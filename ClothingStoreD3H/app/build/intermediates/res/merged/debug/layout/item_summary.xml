<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_label"
        android:elevation="10dp"
        android:padding="5dp"
        android:weightSum="7">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/ic_myproducts" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="6"
            android:orientation="vertical">

            <dev.datvt.clothingstored3h.utils.CustomFontTextView
                android:id="@+id/tenHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Áo khoác Nam"
                android:textColor="@color/colorBlack"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="4.5">

                <dev.datvt.clothingstored3h.utils.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Đơn giá nhập:"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />

                <dev.datvt.clothingstored3h.utils.CustomFontTextView
                    android:id="@+id/donGiaNhap"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2.5"
                    android:gravity="right"
                    android:text="1000000 $"
                    android:textColor="@color/colorGray2"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="4.5">

                <dev.datvt.clothingstored3h.utils.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Đơn giá bán:"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />

                <dev.datvt.clothingstored3h.utils.CustomFontTextView
                    android:id="@+id/donGiaBan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2.5"
                    android:gravity="right"
                    android:text="105000 $"
                    android:textColor="@color/colorGray2"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="4.5">

                <dev.datvt.clothingstored3h.utils.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Số lượng bán:"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />

                <dev.datvt.clothingstored3h.utils.CustomFontTextView
                    android:id="@+id/soLuongBan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2.5"
                    android:gravity="right"
                    android:text="10 SP"
                    android:textColor="@color/colorGray2"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>